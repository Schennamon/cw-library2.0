<div class="container">
  <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
    <% @books.each do |book| %>
      <div class="col">
        <div class="card shadow-sm">
          <div class="card-body">
            <p class="card-title">
              Title:
              <%= link_to book.title, book, class: "text-decoration-none text-reset" %>
            </p>

            <% if !book.genres.empty? %>
              <p>
                <% if book.genres.count > 1 %>
                  Genres:
                <% else %>
                  Genre:
                <% end %>
                <% book.genres.each do |genre| %>
                  <%= genre.name %><% if genre != book.genres.last %>,<% end %>
                <% end %>
              </p>
            <% end %>
            <div class="d-flex justify-content-center align-items-center">
              <div class="btn-group text-center">
                <%= link_to "View", book, method: :get, class: "btn btn-sm btn-outline-success me-2" %>
              </div>
              <% if current_user.present? && Book.by_reserve(current_user).exclude?(book) %>
                <div class="btn-group text-center">
                  <%= link_to "Reserve", reserved_books_path, method: :post, name: "book_id", value: book.id, class: "btn btn-sm btn-outline-success me-2" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
